@import "variables.styl"
*
  box-sizing border-box
html
  height 100%
body
  font-family $fontBody
  font-size $fontSize
  line-height 1.42857143
  height 100%
  color $cornflowerBlue
  background-color $mainBackground
  margin 0
#root
  height 100%
.h1, h1
  font-family inherit
  font-weight 500
  line-height 1.1
  color inherit
  margin 0
p
  margin 0
.h1, h1, button, input
  font-size 21px
.right
  float right
.left
  float left
.hidden, #hidden
  display none
.modal-header
  background-color darkslateblue
  height 50px
  border-top-left-radius 10px
  border-top-right-radius 10px
  img
    display inline-block
    width 30px
    margin 10px
    transform rotate(45deg)
  h1
    display inline-block
    width 280px
    margin-top 15px
    text-align center
    color white
    font-weight 500
  .pd-l
    padding-left 54px
  .pd-r
    padding-right 54px