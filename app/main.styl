@import "variables.css"
*
  box-sizing border-box
body
  font-family var(--font-family)
  font-size 14px
  line-height 1.42857143
  max-width 640px
  margin 0 auto
  overflow-y auto
  -webkit-box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
  -moz-box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
  box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
  color var(--main-color)
  background-color var(--sec-color)
.modal-header
  background-color var(--main-bgcolor)
  height 50px
  border-top-left-radius 10px
  border-top-right-radius 10px
  img
    display inline-block
    width 30px
    margin 10px
    transform rotate(45deg)
  h1
    display inline-block
    width 280px
    margin-top 15px
    text-align center
    color white
    font-weight 500
  .pd-l
    -webkit-padding-start 54px
    -moz-padding-start 54px
  .pd-r
    -webkit-padding-end 54px
    -moz-padding-end 54px
#root
  min-height 100vh
.h1, h1
  font-family inherit
  font-weight 500
  line-height 1.1
  color inherit
  margin 0
p
  margin 0
ul
  padding 0
  margin 0
.h1, h1, button, input
  font-size 21px
.right
  float right
.left
  float left
.hidden, #hidden
  display none
.rtl
  right 0
.ltr
  left 0
input 
  padding 0
  font-family var(--font-family)
#modal-content
  max-width 500px