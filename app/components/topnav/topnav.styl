@import '../../variables.styl'
#topnav
  .header
    background-color $headerColor
    height 3.45em
    display flex
    -webkit-align-items center
    -webkit-box-align center
    -ms-flex-align center
    padding-top auto
    padding-bottom auto
    position relative
    text-align center
    .arrow-wrap
      margin-left 5%
      display inline-block
      .arrow-back
        color white
        cursor pointer
        width 0.8em
    .client-name
      width 100%
      display inline-block
      margin-top 5px
      .icon-online
        display none
        background #09ce17
        border 2px solid white
        border-radius 50%
        transform translateY(2px)
        height 18px
        width 18px
      h1
        color white
        font-size 1.5em
      span
        color white
        display flex
        justify-content center
        padding-top 2px
        font-size 0.73em
        font-weight 100
    .edit-wrap
      display inline-block
      .edit
        margin-right 1.5em
        width 1.5em
        border none
        color white
        &:focus
          outline none
      .add
        height 30px
        margin-top -2px
