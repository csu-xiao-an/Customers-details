#single-punch
  background-color gainsboro
  border-top 1px solid gray
  padding-bottom 30px
  position relative
  min-height 550px
  .triangle-down-wrap
    position absolute
    margin 0 auto
    left 50%
    -webkit-margin-start -20px
    -moz-margin-start -20px
    .triangle-down
    	width 0
    	height 0
    	border-left 20px solid transparent
    	border-right 20px solid transparent
    	border-top 20px solid gray
.punch-data
  box-shadow 1px 3px 6px #bcbcbc
  margin 30px auto 0 auto
  background-color white
  border-radius 15px
  padding 5px
  width 90%
  .delete-wrap
    display inline-block
    position relative
    padding 5px
    width 15%
    top -25px
    img
      position absolute
      width 40px
  .p-sum
    display inline-block
    color gray
    font-size 20px
    width 15%
  .p-name
    display inline-block
    text-align center
    color deepskyblue
    font-size 24px
    padding-top 20px
    width 70%
  .info
    width 100%
    font-size 26px
    font-weight 600
    text-align center
    padding-top 10px
    span
      color deepskyblue
  .use-wrap
    box-shadow 2px 3px 6px #bcbcbc
    border 2px solid grey
    border-radius 15px
    position relative
    margin 10px auto
    height 80px
    width 70%
    img
      position absolute
      top 20px
      left 20px
      height 40px
      width 40px
    h1
      text-align center
      padding-top 22px
      font-weight 600
      font-size 26px
      color white
.punch-data-uses-list
  margin 10px auto
  width 80%
  .uses
    border-top 1px solid grey
    .check-wrap
      display inline-block
      padding 10px
      width 45px
      height 45px
      img
        width 25px
    .count
      display inline-block
      position relative
      top -5px
    .date
      display inline-block
      position relative
      top 10px
.date-to-wrap
  width 95%
  padding 5px
  margin 5px auto 5px auto
  .cal-wrap
    width 18%
    padding 5px 10px
    display inline-block
    float left
    img
      width 40px
  .date-to
    width 82%
    display inline-block
