@import '../../color.styl'
.no-scroll
  overflow hidden
#menu_modal
    overflow auto
    position fixed
    z-index 9999
    width 100%
    height 100%
    background-color rgba(0, 0, 0, 0.7)
  .menu_wrap
    display flex
    flex-direction row-reverse
  .menu
    margin-bottom 100%
    width 60%
    background-color white
    .menu-logo
      margin 0
      text-align center
      padding 30px 0
      border-bottom 1px solid black
    .list-item
      list-style none
      margin 10px 0 10px
    .item-link
      display flex
      flex-direction row-reverse
      align-items center
      text-decoration none
      font-weight bold
      color grey
    .menu-img
      margin 0 10px
      width 30px
      height 30px
