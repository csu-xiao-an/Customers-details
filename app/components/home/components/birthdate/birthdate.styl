#birthdate
  width 100%
  .add-birth
    display flex
    justify-content space-between
    width 100%
    .wrap-birth
      display flex
      flex-direction column
      justify-content space-between
      padding 1px 0 3px
    .add-info
      display flex
      align-items center
      .add-wrap
        width 24px
        height 24px
        background-color var(--active-color)
        border-radius 50%
        display flex
        align-items center
        justify-content center
        img 
          width 17px
          height 17px
    h1
      color var(--main-color)
  .label
    font-size 0.8em
    font-weight 600
    color var(--dark-color)
    margin-bottom 2%
  .wrapBDay
    display flex
    flex-direction column
    justify-content space-between
    margin 1% 0
    .ymd
      font-size 1rem
  .birthdate-edit
    display flex
    width 100%
    justify-content space-between
    .edit-wrap
      display flex
      justify-content space-between
      margin 1% 0
      width 100%
    .datepicker
      display flex
      flex-direction column
      justify-content space-around
    .del-info
      display flex
      align-items center
      .del-wrap
        width 24px
        height 24px
        border 1px solid #deceff
        border-radius 50%
        display flex
        align-items center
        justify-content center
        img 
          width 17px
          height 17px
          transform rotate(45deg)
  .input-wrap
    input
      background transparent
      font-size 1em
      border none
      &:focus
        outline none
  .hidden
    display none
  .button
    display flex
    align-items center
    button
      border-radius 15px
      border none
      background-color var(--dark-color)
      color #fff
      &:focus
        outline none
