#delete-customer
  .del-btn
    margin 0 7px 7px
    button
      width 100%
      height 3.077em
      border none
      margin 0 auto
      font-weight 600
      font-size 1.3em
      text-transform uppercase
      color var(--active-color)
      border-bottom-right-radius 8px
      border-bottom-left-radius 8px
      background-color #fff
  #modal-content
    .modal-body
      display flex
      align-items center
      flex-direction column
      min-height 11.143em
      background-color var(--main-bgcolor)
      .icon
        margin-top 10%
      label
        color white
        margin 5% 0 5% 0
        text-align center
        font-size 1.5em
        padding 0 1rem
    .modal-delete-footer
      button
        background-color transparent
        border none
        padding 0
        width 50%
        height 3em
      .no-btn
        text-transform uppercase
        color #72C71C
      .yes-btn
        text-transform uppercase
        color #FF2D2D
