@import "../../../../variables.styl"
#delete-customer
  .del-btn
    margin 0 7px 7px
    button
      width 100%
      height 3.077em
      border none
      margin 0 auto
      font-weight 600
      font-size 1.3em
      color $delColor
      border-bottom-right-radius 8px
      border-bottom-left-radius 8px
      background-color $blockBackground
  #modal-content
    .modal-body
      display flex
      align-items center
      flex-direction column
      min-height 11.143em
      background-color $headerColor
      .icon
        margin-top 10%
      label
        color white
        margin-top 5%
        text-align center
        font-size 1.5em
    .modal-footer
      button
        background-color transparent
        border none
        width 50%
        height 3em
      .no-btn
        color $delNo
      .yes-btn
        color $delYes
