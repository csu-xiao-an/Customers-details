@import "../../../../variables.styl"
#social-network
  margin 7px 7px 7px
  .soc-header
    height 4em
    display flex
    margin auto 0
    border-radius 8px 8px 0 0
    background-color $blockBackground
    .soc-label
      margin auto 10px
      font-weight 600
      font-size 1.5em
  .soc-body
    background-color $blockBackground
    .soc-block
      display flex
      min-height 4em
      justify-content space-between
      border-top 1px solid $mainBackground
      .left-side
        margin auto 10px
        .title
          font-size 0.8em
          font-weight 600
          color $headerColor
        .detail
          display flex
          margin-top 5px
          align-items center
          .icon
            width 16px
            margin-right 5px
      .right-side
        display flex
        img
          margin auto 10px
    .add-select-wrap
      padding 10px
      border-top 1px solid $mainBackground
      .item-wrap
        .select-wrap
          margin-bottom 10px
          #select-main
            .active
              border none
              border-bottom 1px solid $mainBackground
              .icon
                padding-left 5px
            .options
              border none
        .input-wrap
          input
            border none
            border-bottom 1px solid $mainBackground
            margin-bottom 5px
            width 100%
            color $headerColor
      .action
        display flex
        justify-content flex-end
        padding 10px 0
        .save
          border none
          background-color $headerColor
          color white
          border-radius 100px
  .soc-footer
    height 4em
    display flex
    margin-top 1px
    justify-content space-between
    border-radius 0 0 8px 8px
    background-color $blockBackground
    label
      color $headerColor
      font-size 0.8em
      font-weight 900
      margin auto 10px
