#agreement
  padding: 0 10px;
  border-top: 1px solid #dedeff;
  min-height: 4em;
  display: flex;
  .agreement-wrap
    display: flex;
    justify-content: space-between;
    width: 100%;
    align-items: center;
    .agreement
      -webkit-margin-end 1rem
      -moz-margin-end 1rem
      margin-inline-end 1rem
      line-height 1
    span
      font-size: 0.8em;
      font-weight: 600;
      color: #4f2da7;
      margin: 2% 0;
    .client-img-wrap
      width 65%
      padding 5px 0
    .check
      -webkit-padding-end 0.5rem
      -moz-padding-end 0.5rem
      position relative
      img
        height 20px
        width 20px
      .checking
        display none
        position absolute
        top 0
      .show
        display block
