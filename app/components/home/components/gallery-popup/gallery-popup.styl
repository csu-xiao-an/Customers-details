.no-scroll
  overflow hidden
#gallery-new-modal
    position fixed
    z-index 9999
    justify-content center
    align-items center
    display flex
    width 100%
    height 100%
    left 0
    top 0
    overflow auto
    background-color rgba(0, 0, 0, 0.7)
  .gallery-modal-body
    max-width 640px
    margin 0 auto
    width 100%
    height 100%
    .gallery-modal-header
      height 13%
      width 100%
      display flex
      align-items center
      background-color var(--main-bgcolor)
      img 
        -webkit-margin-start 15px
        -moz-margin-start 15px
        width 32px 
        height 32px
      p
        color #fff
        font-size 20px
        font-weight 900
        -webkit-padding-start 10px
        -moz-padding-start 10px
      .img-back
        display flex
    .img
      display flex
      background-color #fff
      height 74%
      justify-content center
      .img-wrap
        display flex
        overflow hidden
        img 
          object-fit cover
          min-height 100vh
          min-width 100vw
      .img-wrap-other
        display flex
        overflow hidden
        img 
          width 33vw

    .gallery-modal-footer
      height 13%
      display flex
      align-items center
      justify-content space-around
      background-color var(--main-bgcolor)
      .input-wrapper
        width 235px
        background-color #fff
        height 36px
        display flex
        align-items center
        border-radius 8px
        img 
          -webkit-padding-start 11px
          -moz-padding-start 11px
        .gallery-modal-input
          width 190px
          border none
          font-size 16px
          padding 2px 10px 0px 10px
      button 
        height 36px
        width 94px
        text-transform uppercase
        border-radius 30px
        background-color var(--main-bgcolor)
        border 1px solid var(--sec-bgcolor)
        display flex
        align-items center
        justify-content  center
        .text-submit
          font-size 14px
          padding-top 3px
          color var(--sec-bgcolor)
          padding-inline-end 7px
          -webkit-padding-end 7px
          -moz-padding-end 7px
        img
          width 20px
        .submit-spin
          width 20px
          height 20px
          animation 1s spin infinite linear
          @keyframes spin
            from
              transform rotate(0deg)
            to
              transform rotate(360deg)
          .img_spin
            height 20px
            width 20px
            fill white
            