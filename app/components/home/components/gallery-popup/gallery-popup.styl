@import '../../../../variables.css'
.no-scroll
  overflow hidden
#gallery-new-modal
    position fixed
    z-index 9999
    justify-content center
    align-items center
    display flex
    width 100%
    height 100%
    left 0
    top 0
    overflow auto
    background-color rgba(0, 0, 0, 0.7)
    // p
    //   color #fff
    //   font-size 20px
    //   font-weight 900
    //   padding-left 50px
  .gallery-modal-body
    width 100%
    height 100%
    .gallery-modal-header
      height 12vh
      width 100%
      display flex
      align-items center
      background-color var(--primarySameColor)
      img 
        padding-left 15px
      p
        color #fff
        font-size 20px
        font-weight 900
        padding-left 50px
    .img
      display flex
      background-color #fff
      .img-wrap
        display flex
        overflow hidden
        img 
          object-fit cover
          height 76vh
          
    .gallery-modal-footer
      height 12vh
      display flex
      align-items center
      justify-content space-around
      background-color var(--primarySameColor, opacity 0,5)
      .input-wrapper
        width 235px
        background-color #fff
        height 36px
        display flex
        align-items center
        border-radius 8px
        img 
          padding-left 11px
        .gallery-modal-input
          width 190px
          border none
          font-size var(--fontSize16)
          padding 2px 10px 0px 10px
      button 
        height 36px
        width 94px
        text-transform uppercase
        border-radius 30px
        background-color var(--primarySameColor, opacity 0)
        border 1px solid var(--primaryPurpleColor)
        display flex
        align-items center
        justify-content  center
        img 
          width 18px 
          height 18px
          margin-left 4px
        .text-submit
          font-size var(--fontSize)
          padding-top 3px
          color var(--primaryPurpleColor)