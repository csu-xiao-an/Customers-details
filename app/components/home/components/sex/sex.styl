@import "../../../../color.styl"
#sex
  .block
    display flex
    width 100%
    flex-direction column
    .gender
      display flex
      flex-direction column
    .label
      margin 1% 0 3%
    .radio
      display flex
      margin auto 0
      min-height 4em
      flex-direction row
      width 100%
      //border-top 1px solid $mainBackground
      justify-content space-between
      .radio-label
        margin auto 8%
      .circle
        width 20px
        height 20px
        margin auto 0

    .radio.checked
      .circle
        background-repeat no-repeat
  .block.change-state-disable
    display none
