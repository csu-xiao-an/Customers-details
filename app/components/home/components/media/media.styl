@import "../../../../color.styl"
#gallery
  .isVisible
    visibility visible
    opacity 1
    transition 0.2s ease-in-out
  .gallery-header
    margin 0 7px
    display flex
    flex-direction column
    border-top-right-radius 8px
    border-top-left-radius 8px
    background-color $blockBackground
    .title, .files-amount
      height 2.667em
      padding 0 10px
      margin auto 0
      display flex
      align-items center
      font-weight 600
      font-size 1.5em
    .files-amount
      border-top 1px solid $mainBackground
      color $headerColor
      font-size 0.8em
      height 5em
      justify-content space-between
      .action
        #share
          margin-right 40px
        .delete
            margin-left 8px
  #swiper-wrap-gallery
    margin 5px 7px 0
    .swiper-container
      position static
      .swiper-wrapper
        .swiper-slide
          width 9.286em !important
          height 12.5em !important
          margin 0 0 5px 0
          margin-top 0 !important
          background-color $blockBackground
          padding 8px 9px 0 9px
          .check-box
            display none
          .media, video-block .media
            margin-left auto
            //padding 8px 9px 0 9px
            height 8.143em
            width 100%
          .file-name
            font-size 0.8em
            font-weight 600
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            //margin-left 10px
          .file-date
            padding-bottom 10px
            //margin-left 10px
            img
              padding 0
              width 9%
              height 9%
            .date
              font-size 0.8em
              margin-left 5px
          .video_play
            position absolute
            width 50px
            height 50px
            margin auto
            top -15px
            left 0
            bottom 0
            right 0
        .swiper-slide.selected
          .img-selected
            background #bfafe0
            .media
              opacity 0.4
              display block
              margin-bottom 5px
            .video_play.media
              margin-bottom auto
          .check-box
            display block
            position absolute
            top 15px
            right 15px
            z-index 2
          .check-box path
            fill white
  .add-media-wrap
    height 60px
    cursor pointer
    img
      width 40px
      margin 10px 30px 0 30px
      display block
    h1
      margin 18px -10px
      color #6b6b6b
      display block
  .multi-del
    height 4em
    display flex
    justify-content center
    color white
    margin 0 7px
    border-bottom-left-radius 8px
    border-bottom-right-radius 8px
    background-color $delColor
    span
      margin auto
      font-size 1.5em
  .gallery-footer
    height 4em
    display flex
    justify-content space-between
    background-color $blockBackground
    border-bottom-left-radius 8px
    border-bottom-right-radius 8px
    margin 0 7px
    label
      color $headerColor
      font-size 0.8em
      font-weight 800
      margin auto 10px
  .add-media-edit
    margin 0 7px
    padding 10px
    border-bottom-left-radius 8px
    border-bottom-right-radius 8px
    background-color $blockBackground
  .add-input-wrap
    .previw-wrap
      margin-bottom 10px
      img
        width 100%
      .previewText
        font-weight 600
        color $headerColor
    input.file-input
      font-size 1em
      margin-bottom 10px
    .note-input
      width 100%
      height 4em
  .action
    display flex
    justify-content flex-end
    .btn-save
      border none
      right 0
      background-color $headerColor
      color white
      border-radius 100px
  .hidden
    display none
