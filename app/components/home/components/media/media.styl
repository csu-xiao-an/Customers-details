// @import "../../../../variables.css"
#gallery
  margin 7px 7px 7px
  .isVisible
    visibility visible
    opacity 1
    transition 0.2s ease-in-out
  .gallery-header
    display flex
    flex-direction column
    border-top-right-radius 8px
    border-top-left-radius 8px
    background-color #fff
    .title, .files-amount
      height 2.667em
      padding-inline-end 0.7rem
      -webkit-padding-end 0.7rem
      -moz-padding-end 0.7rem
       padding-inline-start 1rem
      -webkit-padding-start 1rem
      -moz-padding-start 1rem
      margin auto 0
      display flex
      align-items center
      font-weight 600
      font-size 1.5em
    .files-amount
      border-top 1px solid #dedeff
      color var(--headerColor)
      font-size 0.8em
      height 5em
      justify-content space-between
      .action
        #share
          -webkit-margin-end 40px
          -moz-margin-end 40px
        .delete
          display flex
          align-items center
          justify-content center
          border 2px solid #BFAFE0
          width 38px
          height 38px
          border-radius 50%
          transition 0.5s
          img
            width 18px
        .grey
          border 2px solid #dbdcdd
          background-color #dbdcdd
        .delete-clicked
          display flex
          align-items center
          justify-content center
          background-color #BFAFE0
          width 38px
          height 38px
          border-radius 50%
          -webkit-margin-start 8px
          -moz-margin-start 8px
          img
            width 18px
  .native-share
    display flex
    padding 0.6rem 0
    justify-content center
    border-bottom-left-radius 8px
    border-bottom-right-radius 8px
    background-color #fff
  #swiper-wrap-gallery
    margin 5px 0 0
    .swiper-container
      position static
      .swiper-wrapper
        .swiper-slide
          width 9.286em !important
          height 12.5em !important
          margin 0 0 5px 0
          margin-top 0 !important
          background-color #fff
          padding 8px 9px 0 9px
          a
            text-decoration none
            color var(--main-color)
          .check-box
            display none
          .media-img
            margin-left auto
            object-fit cover
            height 8.143em
            width 100%
          .empty-check
            display block
            position absolute
            top 15px
            right 15px
            z-index 2
          .media-vid
            margin-left auto
            object-fit fill
            height 8.143em
            width 100%
          .file-name
            font-size 0.8em
            font-weight 600
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            //margin-left 10px
          .file-date
            padding-bottom 10px
            display flex
            align-items center
            //margin-left 10px
            img
              padding 0
              width 14px
              height 14px
            .date
              font-size 10px
              -webkit-margin-start 5px
              -moz-margin-start 5px
          .video_play
            position absolute
            width 50px
            height 50px
            margin auto
            top -15px
            left 0
            bottom 0
            right 0
        .swiper-slide.selected
          .img-selected
            opacity 0.5
            .media
              opacity 0.4
              display block
              margin-bottom 5px
            .video_play.media
              margin-bottom auto
          .check-box
            display block
            position absolute
            top 15px
            right 15px
            z-index 2
          .check-box path
            fill white
  .add-media-wrap
    height 60px
    cursor pointer
    img
      width 40px
      margin 10px 30px 0 30px
      display block
    h1
      margin 18px -10px
      color var(--main-color)
      display block
  .multi-del:disabled
    border 2px solid #efefff
    width 100%
    outline: none
    padding 1.2rem 0  
    display flex
    justify-content center
    color var(--sec-color)
    font-size 16px
    align-items center
    border-bottom-left-radius 8px
    border-bottom-right-radius 8px
    background-color var(--white-color)
    span
      -webkit-margin-end 6.5px
      -moz-margin-end 6.5px
      font-size 1.5em
  .multi-del
    border 2px solid var(--active-color)
    padding 1.2rem 0  
    width 100%
    display flex
    justify-content center
    color white
    font-size 16px
    align-items center
    border-bottom-left-radius 8px
    border-bottom-right-radius 8px
    transition 0.3s linear
    background-color var(--active-color)
    span
      -webkit-margin-end 6.5px
      -moz-margin-end 6.5px
      font-size 1.5em
    img
      display block
  .gallery-footer
    height 4em
    display flex
    justify-content space-between
    background-color #fff
    border-bottom-left-radius 8px
    border-bottom-right-radius 8px
    img
      padding-inline-end 0.7rem
      -webkit-padding-end 0.7rem
      -moz-padding-end 0.7rem
    label
      color var(--dark-color)
      font-size 0.8em
      font-weight 700
      margin auto 10px
    .file-input
      display none
  .add-media-edit
    margin 0 7px
    padding 10px
    border-bottom-left-radius 8px
    border-bottom-right-radius 8px
    background-color #fff
  .add-input-wrap
    .previw-wrap
      margin-bottom 10px
      img
        width 100%
      .previewText
        font-weight 600
        color var(--dark-color)
    input.file-input
      font-size 1em
      margin-bottom 10px
    .note-input
      width 100%
      height 4em
  .action
    display flex
    justify-content flex-end
    .btn-save
      border none
      right 0
      background-color var(--main-bgcolor)
      color white
      border-radius 100px
  .hidden
    display none
.modal-body-new
      display flex
      align-items center
      flex-direction column
      min-height 11.143em
      background-color var(--main-bgcolor)
      .icon
        margin-top 10%
        width 32px
        height 32px
      label
        color white
        margin-top 5%
        text-align center
        font-size 1rem
        padding 0 1rem
    .modal-footer-new
      display flex
      button
        background-color transparent
        text-transform uppercase
        border none
        width 50%
        display flex
        align-items center
        justify-content center
        height 3.75rem
        img
          -webkit-margin-start 5px
          -moz-margin-start 5px
          margin-inline-start 5px
      .no-btn
        outline none
        color var(--dark-color)
        font-size 14px
        padding 0
        .cancel-img
          transform rotate(45deg)
      .yes-btn
        outline none
        color var(--active-color)
        font-size 14px
        padding 0
  .modal-empty-name
      display flex
      align-items center
      background-color var(--main-bgcolor)
      label
        color white
        margin-top 5%
        text-align center
        font-size 1rem
        padding 0 1rem
    .modal-empty-name-footer
      display flex
      button
        background-color transparent
        text-transform uppercase
        border none
        width 100%
        display flex
        align-items center
        justify-content center
        height 3.75rem
        font-weight 600
      .no-btn
        outline none
        color var(--dark-color)
        font-size 14px
        padding 0