.full-wrap-name
  padding .3rem .6rem .3rem
  border-top 1px solid #dedeff
  min-height 4em
  display flex
#name
  .add-name
    font-size 1rem
    font-weight bold
  .label
    font-size 0.8em
    font-weight 600
    color var(--dark-color)
  .fullname-wrap
    flex-grow 1
    display flex
    flex-direction column
    justify-content space-between
    flex-wrap wrap
    .block-content
      width 100%
      font-size 1rem
      line-height 1.2
    .edit-input
      font-size 1rem
      outline none
      line-height: 1
  .btn-common
    display flex
    align-items center
    div
      width 1.5rem
      height 1.5rem
      border-radius 50%
      display flex
      align-items center
      justify-content center
      img
        width 1rem
        height 1rem

  .add-info
    .add-wrap
      background-color var(--active-color)
  .del-info
    .del-wrap
      border 1px solid #deceff
      img 
        transform rotate(45deg)
.error-name
  border 1px solid #d4362a