@import "../../../../color.styl"
#profile
  background $blockBackground
  margin 7px
  border-radius 8px
  box-shadow 0px 0px 28px -8px rgba(0,0,0,0.75)
  .block-title
    color $black
    margin-bottom 0
    margin auto 0
  .block
    padding 0 10px
    border-top 1px solid $mainBackground
    min-height 4em
    display flex
    .fullname, .address, .birthday, .completion, .agreement
      display flex
      margin auto 0
      width 100%
      flex-direction column
    .address, .birthday
      margin: 1% 0
    .completion, .agreement
      flex-direction row
    .agreement
      .label
        width 50%
    .fullname, .phone, .email, .address, .gender, .completion, .agreement
      .label
        font-size 0.8em
        font-weight 600
        color $headerColor
        display: flex;
        align-items: center;
      .block-content
        font-size 1.1em
        width 100%
    .email, .address
      .block-content
        display flex
        flex-direction row
        justify-content space-between
