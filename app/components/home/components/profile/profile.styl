@import "../../../../variables.css"
#profile
  background var(--blockBackground)
  margin 7px
  border-radius 8px
  box-shadow 0px 0px 28px -8px rgba(0,0,0,0.75)
  .block-title
    color var(--black)
    margin-bottom 0
    margin auto 0
  .block
    padding 0 10px
    border-top 1px solid var(--mainBackground)
    min-height 4em
    display flex
    .images
      display flex
      align-items center
      .img-wrap
        margin-left 10px
        img
          width 38px
          height 38px
    .birthday, .completion, .agreement
      display flex
      margin auto 0
      width 100%
      flex-direction column
    .address, .birthday
      margin: 1% 0
    .completion, .agreement
      flex-direction row
    .agreement
      .label
        width 50%
    .phone, .email, .address, .gender, .completion, .agreement
      .label
        font-size 0.8em
        font-weight 600
        color var(--headerColor)
        display: flex;
        align-items: center;
      .block-content
        font-size 1.1em
        width 100%
    .email, .address
      .block-content
        display flex
        flex-direction row
        justify-content space-between
  #profile-header
    padding 0 10px
    border-top 1px solid var(--mainBackground)
    min-height 4em
    display flex
  #name
    padding 0 10px
    border-top 1px solid var(--mainBackground)
    min-height 4em
    display flex
    .fullname
      display flex
      margin auto 0
      width 100%
      flex-direction column
      .label
        font-size 0.8em
        font-weight 600
        color var(--headerColor)
        display: flex;
        align-items: center;
  #address
    padding 0 10px
    border-top 1px solid var(--mainBackground)
    min-height 4em
    display flex
    .address-wrap
      display flex
      margin auto 0
      width 100%
      flex-direction column
      .label
        font-size 0.8em
        font-weight 600
        color var(--headerColor)
        display: flex;
        align-items: center;
    .images
      display flex
      align-items center
      .img-wrap
        margin-left 10px
        img
          width 38px
          height 38px