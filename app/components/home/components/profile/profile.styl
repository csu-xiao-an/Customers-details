// @import "../../../../variables.css"
#profile
  background #fff
  margin 7px
  border-radius 8px
  box-shadow 0px 0px 28px -8px rgba(0,0,0,0.75)
  .add-phones
    padding: 0 10px;
    border-top: 1px solid #dedeff;
    min-height: 4em;
    display: flex;
    .add-phones-wrap
      display: flex;
      justify-content: space-between;
      width: 100%;
      .phone-wrap-half
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 1px 0 3px;
        .label
          font-size: 0.8em;
          font-weight: 600;
          color: var(--dark-color);
      .add-info-pic
        display: flex;
        align-items: center;
        .pic-wrap
          width: 24px;
          height: 24px;
          background-color: var(--active-color);
          border-radius: 50%;
          display: flex;
          align-items: center;
          justify-content: center;
          img
            width: 17px;
            height: 17px;
  input 
    display flex
    border none
    color var(--main-color)
    font-size 14px
  .block-title
    color var(--main-color)
    margin-bottom 0
    margin auto 0
  .block
    padding 0 10px
    border-top 1px solid #dedeff
    min-height 4em
    display flex
    .images
      display flex
      align-items center
      .img-wrap
        -webkit-margin-start 10px
        -moz-margin-start 10px
        img
          width 38px
          height 38px
    .birthday, .completion, .agreement
      display flex
      margin auto 0
      width 100%
      flex-direction column
    .address, .birthday
      margin: 1% 0
    .completion, .agreement
      flex-direction row
    .agreement
      .label
        width 50%
    .phone, .email, .address, .gender, .completion, .agreement
      .label
        font-size 0.8em
        font-weight 600
        color var(--dark-color)
        display flex
        align-items center
      .block-content
        font-size 1.1em
        width 100%
    .email, .address
      .block-content
        display flex
        flex-direction row
        justify-content space-between
  #profile-header
    padding 0 10px
    border-top 1px solid #dedeff
    min-height 4em
    display flex
    justify-content space-between
    align-items center
    .img_apply
      fill: var(--aquamarine)
      width 24px
      height 24px
    .img_refresh
      fill: var(--aquamarine)
      width 18px
      height 18px
    .loader
      width 18px
      height 18px
    .back-save-btn
      display flex
      .back-btn
        display flex  
        -webkit-padding-end 30px
        -moz-padding-end 30px
        color var(--dark-color)
      .back-wrap
        display flex
        align-items center
        .img-back
          display flex
          align-items center
          -webkit-padding-end 6px
          -moz-padding-end 6px
      .save-wrap
        display flex 
        align-items center
        .img-wrap
          display flex
          align-items center
          justify-content center
        .spin
          animation 1s spin infinite linear
          @keyframes spin
            from
              transform rotate(0deg)
            to
              transform rotate(360deg)
        .save-btn
          -webkit-padding-start 6px
          -moz-padding-start 6px
          color #50e3c1
    .edit-profile
      display flex
      background transparent
      border none
      align-items center
      font-weight bold
      font-size 0.8rem
      color var(--dark-color)
      .edit-wrap
        display flex
        align-items center
        -webkit-padding-end 6px
        -moz-padding-end 6px
        .img-edit-profile
          width 18px
          height 18px
  .full-wrap-name
    padding 0 10px
    border-top 1px solid #dedeff
    min-height 4em
    display flex
    .add-name
      display: flex;
      justify-content: space-between;
      width: 100%;
      .wrap-name-full
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 1px 0 3px;
      .add-info
        display: flex;
        align-items: center;
        .add-wrap
          width: 24px;
          height: 24px;
          background-color: var(--active-color);
          border-radius: 50%;
          display: flex
          align-items: center;
          justify-content: center
          img
            width: 17px
            height: 17px
    .fullname
      display flex
      width 100%
      .label
        font-size 0.8em
        font-weight 600
        color var(--dark-color)
      .fullname-wrap
        display flex
        margin-top 5px
        flex-wrap wrap
        .block-content
          width 100%
    .fullname-edit
      display flex
      width 100%
      justify-content space-between
      .edit-wrap
        width 100%
        display flex
        margin 5px 0
        flex-wrap: wrap
        padding-inline-end 2rem
        -webkit-padding-end 2rem
        -moz-padding-end 2rem
      .label
        font-size 0.8em
        font-size 0.8em
        font-weight 600
        color var(--dark-color)
      .label-error
        font-size 0.8em
        font-size 0.8em
        font-weight 600
        color #d4362a
      .edit-input
        display flex
        border none
        width 100%
        &:focus
          outline none
      .del-info-disabled
        pointer-events: none   
      .del-info
        display flex
        align-items center
        .del-wrap
          width 24px
          height 24px
          border 1px solid #deceff
          border-radius 50%
          display flex
          align-items center
          justify-content center
          img 
            width 17px
            height 17px
            transform rotate(45deg)
  .error-name
    border 2px solid #d4362a
    background-color #fce4e4
  #address
    padding 0 10px
    border-top 1px solid #deceff
    min-height 4em
    display flex
    .address-wrap
      width 100%
      display flex
      justify-content space-between
      .address-data
        display flex
        flex-wrap wrap
        margin-top 5px
        .block-content
          width 100%
      .label
        font-size 0.8em
        font-weight 600
        color var(--dark-color)
    .address-data-edit
      display flex
      justify-content space-between
      width 100%
      .del-info
        display flex
        align-items center
      .address-wrap-edit
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        margin 5px 0
        padding-inline-end: 2rem;
        -webkit-padding-end: 2rem;
        input 
          outline none
        .block-content
          width 100%
          display flex
      .label
        font-size 0.8em
        font-weight 600
        color var(--dark-color)
      .del-wrap
        width 24px
        height 24px
        border 1px solid #deceff
        border-radius 50%
        display flex
        align-items center
        justify-content center
        img 
          width 17px
          height 17px
          transform rotate(45deg)
    .add-address
      display flex
      justify-content space-between
      width 100%
      .wrap-address
        display flex
        flex-direction column
        justify-content space-between
        padding 1px 0 3px
        .label
          font-size 0.8em
          font-weight 600
          color var(--dark-color)
      .add-info
        display flex
        align-items center
        .add-wrap
          width 24px
          height 24px
          background-color var(--active-color)
          border-radius 50%
          display flex
          align-items center
          justify-content center
          img 
            width 17px
            height 17px
    .images
      display flex
      align-items center
      .img-wrap
        -webkit-margin-start 10px
        -moz-margin-start 10px
        img
          width 38px
          height 38px
  // .google-maps-wrap
  //   display flex
  //   align-items center
  //   width 100%
  .controls
    width 100%
  .modal-empty-name
        display flex
        align-items center
        background-color var(--main-bgcolor)
        label
          color white
          margin-top 5%
          text-align center
          font-size 1rem
          padding 0 1rem
    .modal-empty-name-footer
      display flex
      button
        background-color transparent
        text-transform uppercase
        border none
        width 100%
        display flex
        align-items center
        justify-content center
        height 3.75rem
        font-weight 600
      .no-btn
        outline none
        color var(--dark-color)
        font-size 14px
        padding 0
  .modal-incorrect-mail
        display flex
        flex-direction: column
        padding 3rem 0 3rem
        background-color var(--main-bgcolor)
        flex-wrap wrap
        justify-content center
        .modal-icon
          padding-bottom 1rem
        label
          color white
          text-align center
          font-size 1rem
          padding 0 1rem
    .modal-incorrect-mail-footer
      display flex
      button
        background-color transparent
        text-transform uppercase
        border none
        width 100%
        display flex
        align-items center
        justify-content center
        height 3.75rem
        font-weight 600
      .no-btn
        outline none
        color var(--dark-color)
        font-size 14px
        padding 0
  .modal-incorrect-phone
        display flex
        flex-direction: column
        padding 3rem 0 3rem
        background-color var(--main-bgcolor)
        flex-wrap wrap
        justify-content center
        .modal-icon
          padding-bottom 1rem
        label
          color white
          text-align center
          font-size 1rem
          padding 0 1rem
    .modal-incorrect-phone-footer
      display flex
      button
        background-color transparent
        text-transform uppercase
        border none
        width 100%
        display flex
        align-items center
        justify-content center
        height 3.75rem
        font-weight 600
      .no-btn
        outline none
        color var(--dark-color)
        font-size 14px
        padding 0
.error-input
  background-color #fce4e4
.error-span
  color red !important