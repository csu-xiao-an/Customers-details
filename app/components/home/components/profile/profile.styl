@import "../../../../variables.css"
#profile
  background var(--blockBackground)
  margin 7px
  border-radius 8px
  box-shadow 0px 0px 28px -8px rgba(0,0,0,0.75)
  input 
    border none
    color var(--cornflowerBlue)
    font-size var(--fontSize)
  .block-title
    color var(--black)
    margin-bottom 0
    margin auto 0
  .block
    padding 0 10px
    border-top 1px solid var(--mainBackground)
    min-height 4em
    display flex
    .images
      display flex
      align-items center
      .img-wrap
        margin-left 10px
        img
          width 38px
          height 38px
    .birthday, .completion, .agreement
      display flex
      margin auto 0
      width 100%
      flex-direction column
    .address, .birthday
      margin: 1% 0
    .completion, .agreement
      flex-direction row
    .agreement
      .label
        width 50%
    .phone, .email, .address, .gender, .completion, .agreement
      .label
        font-size 0.8em
        font-weight 600
        color var(--headerColor)
        display: flex;
        align-items: center;
      .block-content
        font-size 1.1em
        width 100%
    .email, .address
      .block-content
        display flex
        flex-direction row
        justify-content space-between
  #profile-header
    padding 0 10px
    border-top 1px solid var(--mainBackground)
    min-height 4em
    display flex
    justify-content space-between
    align-items center
    .back-save-btn
      display flex
      .back-btn
        padding-right 30px
  #name
    padding 0 10px
    border-top 1px solid var(--mainBackground)
    min-height 4em
    display flex
    .fullname
      display flex
      align-items center
      width 100%
      .label
        font-size 0.8em
        font-weight 600
        color var(--headerColor)
        display: flex;
        align-items: center;
    .fullname-edit
      display flex
      align-items center
      width 100%
      justify-content space-between
      .label
        font-size 0.8em
        font-weight 600
        color var(--headerColor)
        display: flex;
        align-items: center;
      .del-wrap
        width 24px
        height 24px
        border 1px solid #deceff
        border-radius 50%
        display flex
        align-items center
        justify-content center
        img 
          width 17px
          height 17px
          transform rotate(45deg)
  #address
    padding 0 10px
    border-top 1px solid var(--mainBackground)
    min-height 4em
    display flex
    .address-wrap
      display flex
      margin auto 0
      width 100%
      flex-direction column
      .label
        font-size 0.8em
        font-weight 600
        color var(--headerColor)
        display: flex;
        align-items: center;
    .address-wrap-edit
      display flex
      width 100%
      align-items center
      justify-content space-between
      .label
        font-size 0.8em
        font-weight 600
        color var(--headerColor)
        display: flex;
        align-items: center;
      .del-wrap
        width 24px
        height 24px
        border 1px solid #deceff
        border-radius 50%
        display flex
        align-items center
        justify-content center
        img 
          width 17px
          height 17px
          transform rotate(45deg)
    .images
      display flex
      align-items center
      .img-wrap
        margin-left 10px
        img
          width 38px
          height 38px