// @import "../../../../variables.css"
#debts
  border-radius 7px
  margin 7px 7px
  .debt-header
    background-color #fff
    border-top-left-radius 8px
    border-top-right-radius 8px
    height 4em
    display flex
    justify-content space-between
    align-items center
    margin-bottom 2px
    .header-text
      margin auto 10px
      font-size 1.5em
      font-weight 700
      display flex
      justify-content space-between
      width 135px
      .total-debts-wrap
        font-weight 500
    label
      margin auto 10px
      font-size 1.5em
      font-weight 700
    p
      font-size 14px
      color var(--dark-color)
      padding-inline-start 6px
    .btn-header
      display flex
      padding-inline-end 14px
      align-items center
      .btn-header-wrap
        display flex
  .debt-body
    background-color #fff
    .debt-list
      border-top 1px solid #dedeff
      height 4em
      display flex
      justify-content space-between
      .left-side
        display flex
        margin auto 10px
        flex-direction column
        .debt-list-date
          color var(--dark-color)
          font-size 0.8em
          font-weight 600
        .debt-list-name
          display flex
          font-size 1.3em
          flex-direction row
          .debt-list-desc
            margin-left 10px
      .right-side
        margin auto 10px
  .debt-active
    background-color #fff
    .edit
      margin 3px 10px
      label
        font-size 0.8em
        font-weight 600
        color var(--dark-color)
      .description
        margin-top 7px
        border-radius 4px
        height 56px
        display flex
        box-shadow inset 0 1px 3px 0 var(--sec-color)
        background-image linear-gradient(to bottom, #f8f8ff, #efefff)
        align-items center
        justify-content space-between
        .description-input
          padding-inline-start 6px
          background-color transparent
          border none
          font-size 16px
        .btn-desc-del
          display flex
          padding-inline-end 14px
      .edit-debt-head
        display flex
        align-items center
        justify-content space-between
        padding-top 15px
        label
          font-size 0.8em
          font-weight 600
          color var(--dark-color)
        .count
          display flex
          justify-content flex-end
          align-items center
          .ink
            width 28px
            height 28px
            display flex
            border 1px solid var(--sec-bgcolor)
            border-radius 100%
            justify-content center
            align-items center
            span
              margin auto
          .count-input
            width 15%
            border none
            font-size 16px
            text-align center
            padding-inline-end 10px
          .currency-debt
            padding-inline-start 15px
      .actions
        display flex
        justify-content flex-end
        padding 10px 0 10px
        .button-apply
          display flex
          align-items center
          color #50e3c1
          img 
            padding-inline-end 5px
            width 23px
            height 23px
        .del-debts
          display flex
          margin-inline-end 26px
          align-items center
          color #bfafe0
          img
            width 18px
            margin-inline-end 5px
  .debt-footer
    background-color #fff
    width 100%
    height 4em
    display flex
    justify-content space-between
    margin-top 3px
    border-bottom-left-radius 8px
    border-bottom-right-radius 8px
    label
      color var(--dark-color)
      font-size 0.8em
      font-weight 700
      margin auto 10px

  .hidden
    display none
