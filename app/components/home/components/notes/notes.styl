// @import "../../../../variables.css"
#notes
  background-color #fff
  border-radius 7px
  margin 7px 7px
  .note-header
    height 4em
    display flex
    justify-content space-between
    align-items center
    padding 0 14px
    border-bottom 1px solid #dedeff
    span
      font-size 1.5em
      font-weight 700
    .back
      display flex
      align-items center
      justify-content center
      background-color transparent
      border none
      padding 0
      outline none
      font-size 14px
      font-weight 500
      color var(--dark-color)
      img
        width 20px
        height 20px
        -webkit-margin-end 0.2rem
        -moz-margin-end 0.2rem
        margin-inline-end 0.2rem
  .note-body
    overflow hidden
    overflow-y auto
    .note-list
      display flex
      min-height 4em
      justify-content space-between
      border-top 1px solid #dedeff
      .left-side
        margin auto 10px
        .date
          display flex
          flex-direction row
          .notes-list-date
            color var(--dark-color)
            font-size 0.8em
            font-weight 600
          .notes-list-reminder
            -webkit-margin-start 5px
            -moz-margin-start 5px
        .notes-list-desc
          font-size 1.3em
          // width 100px
      .right-side
        display flex
        margin auto 10px
    .edit-note
      border-top 1px solid #dedeff
      margin 0 10px
      margin-top 5%
      .description
        .description-input
          border none
          background #efefff
          color var(--dark-color)
          width 100%
      .reminder
        border-top 1px solid #dedeff
        .reminder-text
          display flex
          margin-top 10px
          flex-direction row
          justify-content flex-end
        .reminder-time
          display flex
          flex-direction row
          margin-top 20px
          justify-content space-between
          .select-wrap
            width 60%
            #select-main
              .active
                border none
                border-bottom 1px solid #dedeff
              .options
                border none
          .input-wrap
            display flex
            justify-content flex-end
            .ink
              width 40px
              height 40px
              color white
              display flex
              justify-content center
              font-size 2em
              align-items center
              border-radius 50%
              background-color var(--main-bgcolor)
              span
               margin-top 3px
            .count-input
              width 30%
              border none
              margin 0 10px
              font-size 2em
              text-align center
        .actions-note
          display flex
          justify-content space-between
          padding 10px 0
          .delete
            display flex
            justify-content center
            left 0px
            top 0px
            width 25px
            height 25px
            background inherit
            background-color rgba(255, 255, 255, 1)
            box-sizing border-box
            border-width 2px
            border-style solid
            border-color rgba(188, 188, 188, 1)
            border-radius 113px
            -moz-box-shadow none
            -webkit-box-shadow none
            box-shadow none
            color var(--main-color)
          .save
            border none
            padding-top 3px
            background-color var(--main-bgcolor)
            color white
            border-radius 100px
  .note-footer
      width 100%
      height 4em
      display flex
      justify-content space-between
      border-top 1px solid #dedeff
      label
        color var(--dark-color)
        font-size 0.8em
        font-weight 700
        margin auto 10px
  .edit-note
    border-top 1px solid #dedeff
    padding 0 14px
    // margin 0 10px
    // margin-top 5%
    .one-note
      font-size 12px
      font-weight bold
      line-height 2
      color var(--dark-color)
    .description
      display flex
      align-items center
      border-radius 4px
      box-shadow 0 2px 4px 0 rgba(191, 175, 224, 0.3)
      background-image linear-gradient(to bottom, #f8f8ff, #efefff)
      .description-area
        background-color transparent
        padding 5px
        resize none
        border none
        outline none
        line-height 1.43
        letter-spacing 0.2px
        width 90%
      .cancel-search
        width 10%
    .reminder
      border-top 1px solid #dedeff
      .reminder-wrap
        display flex
        margin-top 10px
        justify-content space-between
        .switch
          display flex
          align-items center
          border none
          height 1rem
          width 40px
          background-color #EFEFFF
          .switch-toggle
            width 20px
            height 20px
            box-shadow 0 1px 1px 0 rgba(0, 0, 0, 0.24), 0 0 1px 0 rgba(0, 0, 0, 0.12)
            background-image linear-gradient(to bottom, #e1d8f2, #bfafe0)
        .on
          background-color rgba(82, 47, 169, 0.32)
          .switch-toggle
            width 20px
            height 20px
            box-shadow 0 1px 1px 0 rgba(0, 0, 0, 0.24), 0 0 1px 0 rgba(0, 0, 0, 0.12)
            background-image linear-gradient(to bottom, #8a5cd4, #522fa9)
      .set-reminder
        display flex
        align-items center
        .img-wrap
          display flex
          align-items center
          justify-content center
        img
          -webkit-margin-end 0.4rem
          -moz-margin-end 0.4rem
          margin-inline-end 0.4rem
          height 20px
          width 20px
        span
          font-size 12px
          font-weight bold
          line-height 2
          color var(--dark-color)
      .reminder-time
        display flex
        flex-direction row
        margin-top 20px
        justify-content space-between
        .select-wrap
          width 60%
          #select-main
            .active
              border none
              border-bottom 1px solid #dedeff
            .options
              border none
      .actions-note
        display flex
        justify-content space-between
        padding 10px 0
        .delete
          display flex
          justify-content center
          left 0px
          top 0px
          width 25px
          height 25px
          background inherit
          background-color rgba(255, 255, 255, 1)
          box-sizing border-box
          border-width 2px
          border-style solid
          border-color rgba(188, 188, 188, 1)
          border-radius 113px
          -moz-box-shadow none
          -webkit-box-shadow none
          box-shadow none
          color var(--main-color)
        .save
          border none
          padding-top: 3px
          background-color var(--main-bgcolor)
          color white
          border-radius 100px
  .hidden
    display none
  .input-wrap
    display flex
    align-items center
    // justify-content flex-end
    flex-grow 1
    .ink
      width 28px
      height 28px
      display flex
      border 1px solid var(--sec-bgcolor)
      border-radius 100%
      justify-content center
      align-items center
    .count-input
      height 40px
      width 30%
      border none
      font-size 16px
      background-color transparent
      color rgba(34, 34, 34, 0.87)
      text-align center
      &:focus
        outline none
    .total-input
      width 25%
    input:disabled
      background-color transparent
