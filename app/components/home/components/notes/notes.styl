#notes
  background-color #fff
  border-radius 7px
  margin 7px 7px
  .note-header
    height 4em
    display flex
    justify-content space-between
    align-items center
    padding 0 14px
    border-bottom 1px solid #dedeff
    span
      font-size 1.5em
      font-weight 700
    .back
      display flex
      align-items center
      justify-content center
      background-color transparent
      border none
      padding 0
      outline none
      font-size 14px
      font-weight 500
      color var(--dark-color)
      img
        width 20px
        height 20px
        -webkit-margin-end 0.2rem
        -moz-margin-end 0.2rem
        margin-inline-end 0.2rem
  .note-body
    overflow hidden
    overflow-y auto
    .note-list
      display flex
      min-height 4em
      justify-content space-between
      border-top 1px solid #dedeff
      .left-side
        margin auto 10px
        .date
          display flex
          flex-direction row
          .notes-list-date
            color var(--dark-color)
            font-size 0.8em
            font-weight 600
          .notes-list-reminder
            -webkit-margin-start 5px
            -moz-margin-start 5px
        .notes-list-desc
          font-size 1.3em
      .right-side
        display flex
        margin auto 10px
  .note-footer
      width 100%
      height 4em
      display flex
      justify-content space-between
      border-top 1px solid #dedeff
      label
        color var(--dark-color)
        font-size 0.8em
        font-weight 700
        margin auto 10px
