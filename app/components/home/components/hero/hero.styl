@import "../../../../variables.css"
#hero
  position relative
  height 17.2em
  .img
    position relative
    .client-img
      pointer-events none
      user-select none
      width 100%
      object-fit cover
      z-index 1
      height -webkit-fill-available
    &:after
      background: linear-gradient(to bottom,  #4f2da7 0%,rgba(0,0,0,0) 33.33% ,rgba(255,255,255,1) 100%)
      content ""
      display block
      height 100%
      left 0
      position absolute
      top 0
      width 100%
  .star-wrap
    width 42px
    color #6d6d6d
    position absolute
    top 20px
    margin-left 10px
    z-index 2
    span
      letter-spacing 0.2
      color var(--blockBackground)
  .camera
    position absolute
    right 5%
    top 7%
    z-index 2
  .star-wrap-left
    left 10px
  .star-wrap-right
    right 10px
  .star
    fill #6d6d6d
  .star-active
    fill #fec20f
    stroke #fff
    stroke-miterlimit 10
    stroke-width 2px
  .toast
    z-index 2
    position absolute
    top 22px
    left 16%
    //margin 0 auto
    background-color #fec20f
    border-radius 5px
    width 250px
    text-align center
    padding 4px 0
    transition opacity 0.5s ease-in-out
    opacity 0
  .toast-visible
    transition opacity 0.5s ease-in-out
    opacity 1
  .input-group
    margin-left 2%
    bottom 0
    position absolute
    width 50%
    display flex
    justify-content start
    align-items: center;
    border-collapse separate
    z-index 2
    .input-group-addon
      background: rgba(0,0,0,0.0)
      border none
      cursor pointer
      visibility visible
      // padding 6px 8px 6px 8px
      font-size 14px
      font-weight 400
      line-height 1
      color #555
      // text-align center
      // border-radius 4px
      // display table-cell
      //width 1%
      // vertical-align middle
      img
        width 10px
    .input-group-addon-2
      background: rgba(0,0,0,0.0)
      border none
      cursor pointer
      visibility visible
      font-size 14px
      font-weight 400
      line-height 1
      color #555
      // text-align center
      // border-radius 4px
      // display table-cell
      // //width 1%
      // vertical-align middle
      img
        width 10px
    .input-group-addon-3
      visibility visible
    .input-wrap
      margin-left 2%
      input
        border none
        font-size 0.7em
      .form-control
        background rgba(0,0,0,0)
        color var(--black)
        &:focus
          background: rgba(0,0,0,0.0)
          border none
          box-shadow none
          outline none
          color var(--headerColor)
      .form-control-disabled
        pointer-events none
  .status-label
    font-size 0.7em
    font-weight 600
    z-index 2
