@import "../../../../variables.styl"
#hot-links
  height fit-content
  padding-top 10px
  background $blockBackground
  .swiper-container
    height 100%
    .swiper-slide
      margin 0 10px
      width 16.5%
      .link
        height 60px
        text-align center
        color purple
        font-size 16px
        display flex
        flex-direction column
        justify-content center
        align-items center
        background $hotLinkBackground
      .link.add-btn
        background transparent
      .circle1
        width 60px
        margin 0 auto
        border-radius 50%
      .square
        width 60px
        margin 0 auto
        border-radius 18px
      span
        color black
        display flex
        justify-content center
        font-size 0.75em
        padding 0
        font-weight 600
        margin 10px 0
