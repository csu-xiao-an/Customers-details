@import "../../../../variables.css"
#hot-links
  height fit-content
  padding-top 10px
  display flex
  justify-content space-between
  overflow-x auto
  background var(--blockBackground)
  .link-wrap
    .link
      height 60px
      text-align center
      color purple
      font-size 16px
      display flex
      flex-direction column
      justify-content center
      align-items center
      background var(--hotLinkBackground)
    .link.add-btn
      background transparent
    .circle1
      width 60px
      margin: 0 9px;
      border-radius 50%
    .square
      margin: 0 9px;
      width 60px
      border-radius 18px
    span
      color black
      display flex
      justify-content center
      font-size 0.75em
      padding 0
      font-weight 600
      margin 10px 0
