@import "../../../../color.styl"
#phone
  padding 0 10px
  min-height 4em
  display flex
  border-top 1px solid $mainBackground
  .label
    font-size 0.8em
    font-weight 600
    color $headerColor
  .phone-img
    display flex
    align-items center
    // flex-direction row
    // margin auto
    .img-wrap
      margin-left 10px
      a
        display block
        height 38px
  .data-phone
    width 100%
    display flex
    flex-direction row
    justify-content space-between
    .wrap
      display flex
      flex-direction column
      justify-content space-around
  .phone-labels
    .label-wrap
      .call-label
        background-color transparent
    .phone-wrap
      span
        cursor pointer
        font-size 18px
  .add-phone
    display flex
    width 100%
    justify-content space-between
    .add-wrap
      display flex
      flex-direction column
      justify-content space-between
      padding 3px 0
      h1
        color #6b6b6b
    img
      display flex
      width 38px
      height 38px
      align-self center
  .phone-edit
    display flex
    flex-direction row
    justify-content space-between
    width 100%
    .edit
      justify-content space-around
      flex-direction column
       width 70%
      .edit-input
        display flex
        border none
        font-size 18px
        margin-top 7px
        // height 30px
        width 80%
        font-weight 500
        color $headerColor
        &:focus
          outline none
      .label
        display: inline-block;
        width 25%
        margin-top: 4px



    .button
      display flex
      margin auto 0
      button
          display inline-block
          cursor pointer
          border-radius 15px
          border none
          background-color $headerColor
          color white
          &:focus
            outline none
  .hidden
    display none
.error
  display flex
  justify-content center
  color red
  font-size 16px
