@import "../../../../variables.styl"
#modal-wrapper
  display flex
  align-items center
  .modal-body
    position relative
    max-height 70vh
    outline 0
    .close-button
      position absolute
      right 10px
      width 1.25rem
      top 10px
      z-index 2
    .gallery-swiper-wrap
      img
        width 100% 
        max-height 70vh
        object-fit cover
        height auto
        display flex
        border-top-left-radius 8px
        border-top-right-radius 8px
      video
        width 100%
        height 21em
      iframe
        width 100%
        height 100%
      audio
        width 100%
        height 40px
      div
        width 100%
        height 100%
      .audio-img
        width 100%
        height 420px
    .swiper-slide-next, .swiper-slide-prev
      height 0
    .swiper-slide-active
      height auto
    .swiper-button-prev, .swiper-button-next
      position absolute
      top 40%
      width 45px
      height 60px
      border-radius 50%
      z-index 10
    .swiper-button-prev
      left 0
      right auto
      &:before
        position absolute
        font-size 40px
        left 15px
        top 2px
    .swiper-button-next
      right 0
      left auto
      &:before
        position absolute
        font-size 40px
        left 22px
        top 2px
    .modal-footer
      background-color $slideBackGround
      border-bottom-left-radius 8px
      border-bottom-right-radius 8px
      .main
        padding 5px 9px 10px 15px
        .row1
          display flex
          justify-content space-between
          .name
            margin auto 0
            font-size 0.8em
            font-weight 600
          .icons
            display inline-block
            margin auto 0
            img
              width 11px
              height 11px
              &:nth-child(2)
                margin-left 10px
        .row2
          .date
            font-size 0.8em
            margin-left 5px
      .data
        min-height 4em
        display flex
        align-items center
        padding 0 9px 0 15px
        border-top 1px solid $mainBackground
        .note
          width 100%
          font-size 0.8em
        .edit-form
          width 100%
          display flex
          flex-direction column
          .textarea
            width 100%
            border none
            padding 5px 0
            margin 5px 0
            background transparent
          .action
            display flex
            margin 5px 0
            justify-content flex-end
            .btn-save
              border none
              right 0
              background-color $headerColor
              color white
              border-radius 100px
.hidden
  display none
.pointer-events
  pointer-events none
.noSwiping
  width 100%
  height 100%
  pointer-events none
