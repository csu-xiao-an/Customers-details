// @import "../../../../variables.css"
#modal-wrapper
  display flex
  align-items center
  .fade-content
    overflow-x hidden
    border-radius 8px
  .modal-body
    position relative
    outline 0
    .swiper-wrapper
      transform translate3d(0, 0, 0)
    .swiper-slide-active
      min-height 80px
    .close-button
      position absolute
      right -10px
      top -10px
      z-index 2
      padding 2rem
    .swiper-container
      background-color #fff
    .gallery-swiper-wrap
      .gallery-img
        width 100% 
        max-height 70vh
        object-fit cover
        height auto
        display flex
        border-top-left-radius 8px
        border-top-right-radius 8px
      video
        width 100%
        height 21em
      iframe
        width 100%
        height 90vh
      audio
        width 100%
        height 40px
      // div
      //   width 100%
      //   height 100%
      .audio-img
        width 100%
        height 420px
    .swiper-slide-next, .swiper-slide-prev
      height 0
    .swiper-slide-active
      height auto
    .swiper-button-prev, .swiper-button-next
      position absolute
      top 50%
      width 20px
      height 20px
      border-radius 50%
      z-index 10
      background-color rgba(191,175,224, 0.6)
    .swiper-button-prev
      left 0
      right auto
      -webkit-margin-start 15px
      -moz-margin-start 15px
      // &:before
      //   position absolute
      //   font-size 40px
      //   left 15px
      //   top 2px
    .swiper-button-next
      right 0
      left auto
      -webkit-margin-end 15px
      -moz-margin-end 15px
      // &:before
      //   position absolute
      //   font-size 40px
      //   left 22px
      //   top 2px
    .modal-footer
      background-color #fff
      border-bottom-left-radius 8px
      border-bottom-right-radius 8px
      .main
        padding 0.5rem 0
        -moz-padding-start 1rem
        -webkit-padding-start 1rem
        padding-inline-start 1rem
        -moz-padding-end 0.6rem
        -webkit-padding-end 0.6rem
        padding-inline-end 0.6rem
        .row1
          display flex
          justify-content space-between
          .name
            margin auto 0
            font-size 0.8em
            font-weight 600
            width 60%
            overflow-wrap break-word
          .icons
            display flex
            margin auto 0
            img
              width 20px
              height 20px
              &:not(:first-child)
                -moz-margin-start 0.8rem
                -webkit-margin-start 0.8rem
                margin-inline-start 0.8rem
        .row2
          display flex
          align-items center
          img
            width 18px
            height 18px
          .date
            font-size 0.8em
            -webkit-margin-start 5px
            -moz-margin-start 5px
      .data
        min-height 4em
        display flex
        align-items center
        -moz-padding-start 1rem
        -webkit-padding-start 1rem
        padding-inline-start 1rem
        -moz-padding-end 0.6rem
        -webkit-padding-end 0.6rem
        padding-inline-end 0.6rem
        border-top 1px solid #dedeff
        .note
          width 100%
          font-size 0.8em
        .edit-form
          width 100%
          display flex
          flex-direction column
          .textarea
            width 100%
            border none
            padding 5px 0
            margin 5px 0
            background transparent
          .action
            display flex
            margin 5px 0
            justify-content flex-end
            .btn-save
              border none
              right 0
              background-color var(--main-bgcolor)
              color white
              border-radius 100px
              padding .125rem .75rem
              font-size 1.2rem
.hidden
  display none
.pointer-events
  pointer-events none
.noSwiping
  width 100%
  height 100%
  pointer-events none
.modal-body-new
      display flex
      align-items center
      flex-direction column
      min-height 11.143em
      background-color var(--main-bgcolor)
      .icon
        margin-top 10%
        width 32px
        height 32px
      label
        color white
        margin-top 5%
        text-align center
        font-size 1rem
        padding 0 1rem
    .modal-footer-new
      display flex
      button
        background-color transparent
        text-transform uppercase
        border none
        width 50%
        display flex
        align-items center
        justify-content center
        height 3.75rem
        img
          -webkit-margin-start 5px
          -moz-margin-start 5px
          margin-inline-start 5px
      .no-btn
        outline none
        color var(--dark-color)
        font-size 14px
        padding 0
        .cancel-img
          transform rotate(45deg)
      .yes-btn
        outline none
        color var(--active-color)
        font-size 14px
        padding 0
