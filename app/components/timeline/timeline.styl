@import "../../variables.styl"
#timeline
  background-color gainsboro
  overflow hidden
  width 100%
  position relative
  .list
    padding-top 10px
    min-height 736px
    width 100%
    margin-bottom 100px
    background-color $secondaryColor
    .separator-wrap
      padding-bottom 10px
      background-image linear-gradient(to top, #efefff, #ffffff)
      .separator
        border-top 1px dashed $primaryColor
        border-bottom 1px dashed $primaryColor
        font-size 18px
        height 1.9rem
        line-height 1.9rem
        font-weight 900
        margin 0 auto
        text-align center
        .date_weekday
          color $primaryColor
        .date_month
          margin 0 5px
          color $primaryBlackColor
        .date_day
          color $primaryBlackColor
    .spiner-wrap
      width 100%
      height 50px
      img
        margin 0 auto
        display block
        width 50px
        height 50px
  .buttons-wrap
    background-color gainsboro
    width 100%
    height 70px
    position fixed
    bottom 0
    div
      background-color darkslategray
      display inline-block
      text-align center
      margin 10px 1px
      padding 5px 10px
      border none
      color white
      height 50px
      img
        width 20px
        height 20px
      h1
        font-size 15px
        margin-top -3px
  .nVisible
    visibility hidden
