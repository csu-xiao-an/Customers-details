@import "../../variables.styl"
#timeline
  overflow hidden
  width 100%
  background-color $secondaryColor
  position relative
  .list
    min-height 736px
    width 100%
    margin-bottom 70px
    .separator-wrap
      margin 1rem 0
      box-shadow -1px 0px 14px 16px rgba(255,255,255,1)
      -webkit-box-shadow -1px 0px 14px 16px rgba(255,255,255,1)
      -moz-box-shadow -1px 0px 14px 16px rgba(255,255,255,1)
      background-color #fff
      .separator
        border-top 1px dashed $primaryColor
        border-bottom 1px dashed $primaryColor
        font-size 18px
        height 1.9rem
        line-height 1.9rem
        font-weight 900
        margin 0 auto
        text-align center
        .date_weekday
          color $primaryColor
        .date_month
          margin 0 5px
          color $primaryBlackColor
        .date_day
          color $primaryBlackColor
    .spiner-wrap
      width 100%
      height 50px
      img
        margin 0 auto
        display block
        width 50px
        height 50px
  .buttons-wrap
    background-color gainsboro
    width 100%
    height 70px
    position fixed
    bottom 0
    div
      background-color darkslategray
      display inline-block
      text-align center
      margin 10px 1px
      padding 5px 10px
      border none
      color white
      height 50px
      img
        width 20px
        height 20px
      h1
        font-size 15px
        margin-top -3px
  .nVisible
    visibility hidden
