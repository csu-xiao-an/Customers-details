#timeline
  overflow hidden
  width 100%
  background-color var(--sec-color)
  position relative
  .list
    width 100%
    overflow-y auto
    max-height 75vh
    .separator-wrap
      margin 1rem 0
      box-shadow -1px 0px 14px 16px rgba(255,255,255,1)
      -webkit-box-shadow -1px 0px 14px 16px rgba(255,255,255,1)
      -moz-box-shadow -1px 0px 14px 16px rgba(255,255,255,1)
      background-color #fff
      .separator
        border-top 1px dashed var(--dark-color)
        border-bottom 1px dashed var(--dark-color)
        font-size 18px
        height 1.9rem
        line-height 1.9rem
        font-weight 900
        margin 0 auto
        text-align center
        .date_weekday
          color var(--dark-color)
        .date_month
          margin 0 5px
          color var(--main-color)
        .date_day
          color var(--main-color)
    .spiner-wrap
      width 100%
      height 50px
      img
        margin 0 auto
        display block
        width 50px
        height 50px
  .buttons-wrap
    margin 10px
    text-align center
    display flex
    justify-content space-between
    overflow-x auto
    align-items center
    position relative
    .main-img
      width 3.75rem
      height 3.75rem
      margin 10px
    .mark
      height 1.2rem
      width 1.2rem
      position absolute
      top .2rem
      right .4rem
        span
          font-weight bold
          font-size 0.7rem
          padding 8px 0 6px
          color var(--main-color)
.nVisible
  visibility hidden
